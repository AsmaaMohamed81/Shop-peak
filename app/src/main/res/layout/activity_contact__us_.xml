<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:background="@color/gray3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.alatheer.shop_peak.Activities.Contact_Us_Activity">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:theme="@style/ToolbarColorbackArrow"
            app:popupTheme="@style/AppTheme"
            android:layout_gravity="center"
            app:title="@string/contact"
            app:titleTextColor="@color/colorPrimary"
            android:layout_height="?attr/actionBarSize"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/contact_us_field"
                android:hint="Name"
                android:drawableRight="@drawable/ic_profile"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorPrimary"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/contact_us_field"
                android:layout_marginTop="10dp"
                android:hint="Email"
                android:drawableRight="@drawable/ic_email"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorPrimary"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/contact_us_field"
                android:layout_marginTop="10dp"
                android:hint="Phone Number"
                android:drawableRight="@drawable/ic_call"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorPrimary"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/contact_us_field"
                android:layout_marginTop="10dp"
                android:hint="Subject"
                android:drawableRight="@drawable/ic_edit"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorPrimary"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/contact_us_field"
                android:layout_marginTop="10dp"
                android:hint="Message"
                android:singleLine="true"
                android:gravity="top"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorPrimary"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_field"
                android:text="Send"
                android:textSize="16sp"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                >
                <LinearLayout
                    android:id="@+id/ll_whatsapp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    >

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/whatsapp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:text="مراسلة خلال الواتس اب"
                        android:gravity="center"
                        android:inputType="textMultiLine"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_gmail"

                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    >

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/gmail"
                        android:padding="4dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:text="مراسلة خلال الايميل"
                        android:gravity="center"
                        android:inputType="textMultiLine"

                        />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>




</ScrollView>
